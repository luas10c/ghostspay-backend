{
  "compilerOptions": {
    "strict": true,
    "skipLibCheck": true,

    "noImplicitAny": true,
    "strictNullChecks": true,

    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",

    "esModuleInterop": true,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "paths": {
      "#/*": ["./src/*"]
    }
  }
}
